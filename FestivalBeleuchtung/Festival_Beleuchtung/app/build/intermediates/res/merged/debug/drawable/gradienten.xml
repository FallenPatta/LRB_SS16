                android:gradientRadius="250dp"
                android:centerX="50.0%"
                android:centerY="100.0%"
                android:startColor="#FFFFBF00"
                android:endColor="#FF5F0000" />
            <stroke
                android:color="#636363"
                android:width="3dp"
                >
            </stroke>
        </shape>
    </item>

    <item android:maxLevel="3">
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">
            <gradient
                android:type="radial"
                android:gradientRadius="250dp"
                android:centerX="50.0%"
                android:centerY="100.0%"
                android:startColor="#FF006000"
                android:endColor="#FFA0FF00" />
            <stroke
                android:color="#636363"
                android:width="3dp"
                >
            </stroke>
        </shape>
    </item>

</level-list>