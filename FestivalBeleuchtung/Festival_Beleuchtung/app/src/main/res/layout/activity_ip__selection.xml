<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="david.socket_communication_rpi.IP_Selection"
    android:nestedScrollingEnabled="false">

    <Button
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Farbe Senden"
        android:id="@+id/start_btn"
        android:textSize="40dp"
        android:textColor="#000000"
        android:backgroundTint="#426812"
        android:backgroundTintMode="src_over"
        android:background="#426812"
        android:layout_alignWithParentIfMissing="false"
        android:textStyle="bold"
        android:layout_below="@+id/color_indicator"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/ip_text"
        android:autoText="false"
        android:hint="IP Adresse der Heizung"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:importantForAccessibility="yes" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="IP Speichern"
        android:id="@+id/save_btn"
        android:layout_below="@+id/ip_text"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="IP LÃ¶schen"
        android:id="@+id/remove_btn"
        android:layout_below="@+id/ip_text"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:id="@+id/update_text"
        android:background="@drawable/borderfile"
        android:textSize="20dp"
        android:textAlignment="center"
        android:singleLine="true"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit ="marquee_forever"
        android:scrollHorizontally="true"
        android:textColor="#FF32D1E3"
        android:layout_below="@+id/ip_text"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="false"
        android:layout_alignWithParentIfMissing="false"
        android:layout_alignParentLeft="false"
        android:layout_alignParentTop="false"
        android:layout_marginTop="80dp"
        android:layout_alignRight="@+id/color_indicator"
        android:layout_alignLeft="@+id/color_indicator" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:id="@+id/color_indicator"
        android:background="@drawable/gradienten"
        android:clickable="true"
        android:layout_alignWithParentIfMissing="false"
        android:layout_below="@+id/update_text"
        android:layout_alignRight="@+id/remove_btn"
        android:layout_alignEnd="@+id/remove_btn"
        android:layout_marginTop="0dp" />

    <SeekBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/seekBar"
        android:layout_below="@+id/start_btn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:padding="10dp"
        android:maxHeight="10dp"
        android:minHeight="10dp" />

    <SeekBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/seekBar2"
        android:layout_below="@+id/seekBar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:padding="10dp"
        android:maxHeight="10dp"
        android:minHeight="10dp" />

    <SeekBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/seekBar3"
        android:layout_below="@+id/seekBar2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:padding="10dp"
        android:maxHeight="10dp"
        android:minHeight="10dp" />

</RelativeLayout>
